<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="bootstrap3.0/css/bootstrap.css">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>
<%- include inc/header %>
<div class="content col-md-offset-3">
    <h1>Sign in</h1>

    <form role="form" method="post">
        <div class="row">
            <div class="input-group col-xs-4">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                <input type="text" name="name" id="name" class="form-control" placeholder="user name"/>
            </div>
        </div>
        <div class="row">
            <div class="input-group col-xs-4">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <input type="text" name="password" id="password" class="form-control" placeholder="password"/>
            </div>
        </div>
        <div class="row">
            <button id="btn_login" type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-send"></span> Sign in
            </button>
        </div>
    </form>
</div>

<%- include inc/footer %>
<script type="text/javascript">
    seajs.use('page/login');
</script>
</body>
</html>