<!doctype html>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
	<title><%= title %></title>
	<link rel="stylesheet" href="bootstrap3.0/css/bootstrap.css">
	<link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>
<%- include inc/header %>
<div class="col-md-8 col-md-offset-2">
	<form method="post" role="form" action="">
		<div class="form-group row">
			<label for="title" class="col-md-1 control-label">Title:</label>

			<div class="col-md-7 col-sm-6">
				<input type="text" id="title" name="title" class="form-control" placeholder="title"/>
			</div>
		</div>
		<div class="form-group row">
			<label for="title" class="col-md-1 control-label">Content:</label>
			<div class="col-md-5 col-sm-5">
				<textarea name="content" id="content" rows="15" cols="100" class="input-on-light" placeholder="what's your mind?"></textarea>
			</div>
		</div>
		<div class="row">
			<button type="reset" class="btn btn-default col-md-offset-6">
				<span class="glyphicon glyphicon-trash"></span> Reset
			</button>
			<button id="btn_post" type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-send"></span> Post
			</button>
		</div>
	</form>
</div>
<%- include inc/footer %>
<script type="text/javascript">
    seajs.use('page/posting');
</script>
</body>
</html>